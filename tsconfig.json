{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "lib": ["DOM", "ES2022"],
    "esModuleInterop": true,
    "types": ["@league-of-foundry-developers/foundry-vtt-types","obs-studio","obs-websocket-js"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "module": "ESNext",
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte", "src/node_modules/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
}
  