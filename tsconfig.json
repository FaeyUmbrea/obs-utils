{
	"compilerOptions": {
		"target": "ES2022",
		"baseUrl": ".",
		"module": "ESNext",
		"moduleResolution": "Bundler",

		"types": ["@league-of-foundry-developers/foundry-vtt-types", "@types/obs-studio"],
		"allowImportingTsExtensions": true,
		"strict": false,
		"strictNullChecks": true,
		"noEmit": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,

		"verbatimModuleSyntax": true,
		"skipLibCheck": true
	},

	"include": ["src/**/*"],
	"exclude": ["node_modules/*"]
}
